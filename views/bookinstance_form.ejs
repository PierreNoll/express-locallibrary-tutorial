<div id="bookinstance_form">
  <div class="container">
    <h1>
      <%-title%>
    </h1>
    <form method="post" action="">
      <div class="form-group">
        <label for="book">Book: </label>
        <select name="book" type="select" class="form-control" id="book" placeholder="Select book" required='true'>
          <% for (var i = 0; i < book_list.length; i++) {%>
          <% if (bookinstance) {%>
          <option value=<%=book_list[i]._id%>
            <%-(book_list[i]._id.toString()==bookinstance.book.toString()) ? 'selected' : false%>>
            <%-book_list[i].title%>
          </option>
          <%} else {%>
          <option value=<%=book_list[i]._id%>>
            <%-book_list[i].title%>
          </option>
          <%}%>
          <%}%>
        </select>
      </div>
      <div class="form-group">
        <label for="imprint">Imprint: </label>
        <input name="imprint" type="text" class="form-control" id="imprint" placeholder="Publisher and date information" value=<%=(!bookinstance) ? '' : bookinstance.imprint%>>
      </div>
      <div class="form-group">
        <label for="due_back">Date when book available: </label>
        <input name="due_back" type="date" class="form-control" id="due_back" placeholder="YYYY-MM-DD" value=<%=(!bookinstance) ? '' : bookinstance.due_back%>>
      </div>
      <div class="form-group">
        <label for="status">Status: </label>
        <select name="status" type="select" class="form-control" id="status" placeholder="Select status" required='true'>
          <option value='Maintenance'>Maintenance</option>
          <option value='Available'>Available</option>
          <option value='Loaned'>Loaned</option>
          <option value='Reserved'>Reserved</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <% if (errors){%>
    <ul>
      <% for (var i = 0; i < errors.length; i++) {%>
      <li>
        <%-errors[i].msg%>
      </li>
      <%}%>
    </ul>
    <%}%>
  </div>
</div>