<div id="bookinstance_delete">
  <div class="container">
    <h1>ID:
      <%-bookinstance._id%>
    </h1>
    <p><strong>Title:</strong>
      <a href='<%=bookinstance.book.url%>'>
        <%- bookinstance.book.title%></a>
    </p>
    <p><strong>Imprint:</strong>
      <%- bookinstance.imprint%>
    </p>
    <p><strong>Status:</strong>
      <%if (bookinstance.status=='Available') {%>
      <span class="text-success">
        <%-bookinstance.status%></span>
      <%} else if (bookinstance.status=='Maintenance') {%>
      <span class="text-danger">
        <%-bookinstance.status%></span>
      <%} else {%>
      <span class="text-warning">
        <%-bookinstance.status%></span>
      <%}%>
    </p>
    <%if (bookinstance.status!='Available') {%>
    <p><strong>Due back:</strong>
      <%- bookinstance.due_back_formatted%>
    </p>
    <%}%>
    <form method="post" action="">
      <div class="form-group">
        <input name="bookinstanceid" type="hidden" class="form-control" id="bookinstanceid" required='true' value=<%=bookinstance._id%>>
      </div>
      <button type="submit" class="btn btn-primary">Delete</button>
    </form>
  </div>
</div>