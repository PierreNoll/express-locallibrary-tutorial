<div id="genre_delete">
  <div class="container">
    <h1>Genre:
      <%- genre.name%>
    </h1>


    <dl>
      <% if (genre_books.length){%>
      <p><strong>Delete the following books before attempting to delete this genre</strong></p>
      <div style='margin-left:20px;margin-top:20px'>
        <h4> Books </h4>
        <% for (var i = 0; i < genre_books.length; i++) {%>
        <dt>
          <a href='<%=genre_books[i].url%>'>
            <%- genre_books[i].title%></a>
        <dd>
          <%-genre_books[i].summary%>
        </dd>
        </dt>

        <% }%>
      </div>
      <%} else {%>
      <p> Do you really want to delete this Genre?</p>
      <%}%>
    </dl>

    <form method="post" action="">
      <div class="form-group">
        <input name="genreid" type="hidden" class="form-control" id="genreid" required='true' value=<%=genre._id%>>
      </div>
      <button type="submit" class="btn btn-primary">Delete</button>
    </form>
  </div>
</div>